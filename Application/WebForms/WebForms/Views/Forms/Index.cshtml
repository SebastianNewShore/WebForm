@model WebForms.Models.Employees
@{
    ViewData["Title"] = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Empleado</h3>
        </div>
    </div>
    <hr />
    <br />
    <div class="row">
        <form method="post" asp-action="Create">
            <div class="row">
                <div class="col-sm-12">
                    <h5>Usuario</h5>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="CodeEmp" class="control-label"></label>
                        <input asp-for="CodeEmp" type="text" class="form-control" required />
                        <span asp-validation-for="CodeEmp" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="UserEmp" class="control-label"></label>
                        <input asp-for="UserEmp" type="text" class="form-control" required />
                        <span asp-validation-for="UserEmp" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="text" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <h5>Informacion Personal</h5>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" type="text" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select class="form-control" id="IdGender" name="IdGender" required>
                            <option value="0">Femenino</option>
                            <option value="1">Masculino</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" type="text" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Salario</label>
                        <input type="text" class="form-control" id="IdSalary" name="Salary" required />
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label asp-for="BirthDate" class="control-label"></label>
                        <input asp-for="BirthDate" type="date" class="form-control" required />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <h5>Informacion de Contacto y Ubicación</h5>
                </div>
            </div>
            <br />
        </form>
    </div>
</div>

